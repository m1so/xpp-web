{
    "env": {
        "browser": true,
        "es6": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "plugins": [
        "html"
    ],
    "settings": {
        "html/report-bad-indent": 1
    },
    "globals": {
        "Plotly": false
    },
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single",
            { "allowTemplateLiterals": true }
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error",
            { "caughtErrors": "none" }
        ],
        "no-const-assign": [
            "error"
        ]
    }
}
